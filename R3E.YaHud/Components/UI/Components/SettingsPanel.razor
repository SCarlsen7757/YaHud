@using R3E.YaHud.Services.Settings
@using R3E.YaHud.Components.UI.Components
@using R3E.YaHud.Components.Widget
@using R3E.YaHud.Components.Widget.Core
@using System.ComponentModel
@implements IDisposable

<div class="overlay">
    <div class="overlay-panel settings-panel">
        <!-- Header -->
        <div class="panel-header">
            <h3>Widget Settings</h3>

            <EnumSelect TEnum="SettingsViewMode"
                        Value="@CurrentViewMode"
                        ValueChanged="OnViewModeChanged"
                        LabelProvider="@(v => v.GetDisplayName())" />
        </div>

        <!-- Scrollable body -->
        <div class="panel-body">
            <div class="groups-grid">
                @foreach (var widget in Widgets)
                {
                    <div class="group-column">
                        <ul class="group-list">
                            <li class="group-item">
                                <div class="widget-header">
                                    <strong class="widget-name">@widget.Name</strong>
                                    <span class="widget-category">@widget.Category</span>
                                </div>
                                <WidgetSettings Settings="widget.Settings" />
                                <div class="item-actions @(widget.Settings!.Visible ? "" : "hidden")">
                                    <button class="btn-primary" @onclick="() => widget.ResetPosition()">Reset position</button>
                                </div>
                            </li>
                        </ul>
                    </div>
                }
            </div>
        </div>

        <!-- Footer -->
        <div class="panel-footer button-group">
            <button class="btn-primary" @onclick="OnClose" aria-label="Close settings panel">Close</button>
            @if (CurrentViewMode == SettingsViewMode.Expert)
            {
                <button class="btn-primary" @onclick="() => SettingsService.ClearAll()" aria-label="Clear all settings">Clear settings</button>
            }
        </div>
    </div>
</div>

@code {
    [Parameter] public List<IWidget> Widgets { get; set; } = [];
    [Parameter] public EventCallback OnClose { get; set; }

    [Inject] public SettingsService SettingsService { get; set; } = default!;

    private SettingsViewMode CurrentViewMode
    {
        get => SettingsService.GlobalSettings.ViewMode;
        set
        {
            if (SettingsService.GlobalSettings.ViewMode != value)
            {
                SettingsService.GlobalSettings.ViewMode = value;
                StateHasChanged();
            }
        }
    }

    private Task OnViewModeChanged(SettingsViewMode v)
    {
        CurrentViewMode = v;
        return Task.CompletedTask;
    }

    private readonly Dictionary<BasicSettings, PropertyChangedEventHandler> settingsHandlers = new();

    protected override void OnParametersSet()
    {
        base.OnParametersSet();

        var currentSettings = Widgets?
            .Select(w => w.Settings)
            .Where(s => s is not null)
            .Cast<BasicSettings>()
            .ToList() ?? new List<BasicSettings>();

        foreach (var s in currentSettings)
        {
            if (!settingsHandlers.ContainsKey(s))
            {
                PropertyChangedEventHandler handler = (sender, args) =>
                {
                    if (string.IsNullOrEmpty(args?.PropertyName) || args.PropertyName == nameof(BasicSettings.Visible))
                    {
                        InvokeAsync(StateHasChanged);
                    }
                };

                s.PropertyChanged += handler;
                settingsHandlers[s] = handler;
            }
        }
    }

    public void Dispose()
    {
        foreach (var kv in settingsHandlers)
        {
            kv.Key.PropertyChanged -= kv.Value;
        }

        settingsHandlers.Clear();
    }
}
